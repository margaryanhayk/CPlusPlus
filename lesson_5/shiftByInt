
#include <iostream>
#include <vector>

std::vector<int> shiftByInt(int str[], int x , int length)
{
    std::vector<int> my;
    if (x>=length){x = x- (x%length)*length;}
    for (int i = length-x; i<length; ++i ){
        my.push_back(str[i]); 
    }
    for (int i = 0; i<length-x; ++i ){
        my.push_back(str[i]); 
    }
    return my;
}
/////////////////////////////checking
int main()
{
    int x = 5;
    int str [] = { 16, 2, 77, 40, 12071 };
    
    std::vector<int> myvec = shiftByInt(str , x , 5);
    
    for (auto it = myvec.begin(); it != myvec.end(); it++) {
        std::cout << *it << " "; 
    }
}
